@model List<NewspaperMVCProject.UI.Areas.Admin.Data.VMs.UpdatePostVM>
    
@{
    ViewBag.Title = "HomePage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<style>
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        width: 70%;
        margin: auto;
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-sm-8">
            <div class="box box-danger">
                <div class="box-header" align="center">
                    <h4 class="box-title">AdminHomePage</h4>
                </div>
                <div class="box-body">
                    <form action="/Admin/Home/HomePage" method="post" role="form" enctype="multipart/form-data">


                        <br>
                        @*Carousel*@
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                                <li data-target="#myCarousel" data-slide-to="3"></li>
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">

                                <div class="item active">
                                    <img src="~/resim/Corona.jpg" alt="Chania" width="460" height="345">
                                    <div class="carousel-caption">
                                        <h3>Chania</h3>
                                        <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                                    </div>
                                </div>

                                <div class="item">
                                    <img src="~/resim/mesut.jpg" alt="Chania" width="460" height="345">
                                    <div class="carousel-caption">
                                        <h3>Chania</h3>
                                        <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                                    </div>
                                </div>

                                <div class="item">
                                    <img src="~/resim/Corona.jpg" alt="Flower" width="460" height="345">
                                    <div class="carousel-caption">
                                        <h3>Flowers</h3>
                                        <p>Beatiful flowers in Kolymbari, Crete.</p>
                                    </div>
                                </div>

                                <div class="item">
                                    <img src="~/resim/serdar.jpg" alt="Flower" width="460" height="345">
                                    <div class="carousel-caption">
                                        <h3>Flowers</h3>
                                        <p>Beatiful flowers in Kolymbari, Crete.</p>
                                    </div>
                                </div>

                            </div>

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                        @* Content *@

                        <br />
                        <br />
                        <br />
                        <br />

                        <div class="box-header" align="center">
                            <h4 class="box-title">Haber Başlığı</h4>
                        </div>
                        <br />
                        <br />
                        <div class="row mt-2">
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-header">
                                        <img src="img/Battle_of_Waterloo_1815.png" class="card-img-top">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">Pelkas Harikalar yaratıyor</h5>
                                        <p class="card-text">Fenerbahçe'nin son bir haftada oynadığı üçüncü maç Erzurum deplasmanıydı. Hem havanın soğuk olması, hem zeminin kötülüğü, bir de buna rakım olarak yüksek bir deplasmana gidilmesi eklenince; bu maç üzerinde ilk öncelik üç puan alınmasıydı. Nitekim de öyle oldu. Oy un içinde ilk devre Hakan ile Pelkas'ın enerjisi oldukça yüksekti. Bu takıma da yansıdı ve ilk yarının uzatma dakikalarında F.Bahçe golü buldu. İkinci devrede de çok erken atılan gollerle maçı kazanmasını bildi..</p>
                                    </div>
                                    <div class="card-footer">
                                        <a href="https://en.wikipedia.org/wiki/Battle_of_Waterloo" class="btn btn-dark btn-block">Wikipedia</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-header">
                                        <img src="img/Battle_of_Waterloo_1815.png" class="card-img-top">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">Battle of Waterloo</h5>
                                        <p class="card-text">The Battle of Waterloo was fought on Sunday, 18 June 1815, near Waterloo in Belgium, part of the United Kingdom of the Netherlands at the time. A French army under the command of Emperor Napoleon Bonaparte was defeated by two of the armies of the Seventh Coalition, a British-led coalition consisting of units from the United Kingdom, the Netherlands, Hanover, Brunswick and Nassau, under the command of the Duke of Wellington, referred to by many authors as the Anglo-allied army or Wellington's army, and a Prussian army under the command of Field Marshal von Blücher, referred also as Blücher's army. The battle marked the end of the Napoleonic Wars.</p>
                                    </div>
                                    <div class="card-footer">
                                        <a href="https://en.wikipedia.org/wiki/Battle_of_Waterloo" class="btn btn-dark btn-block">Wikipedia</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-header">
                                        <img src="img/Battle_of_Waterloo_1815.png" class="card-img-top">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">Battle of Waterloo</h5>
                                        <p class="card-text">The Battle of Waterloo was fought on Sunday, 18 June 1815, near Waterloo in Belgium, part of the United Kingdom of the Netherlands at the time. A French army under the command of Emperor Napoleon Bonaparte was defeated by two of the armies of the Seventh Coalition, a British-led coalition consisting of units from the United Kingdom, the Netherlands, Hanover, Brunswick and Nassau, under the command of the Duke of Wellington, referred to by many authors as the Anglo-allied army or Wellington's army, and a Prussian army under the command of Field Marshal von Blücher, referred also as Blücher's army. The battle marked the end of the Napoleonic Wars.</p>
                                    </div>
                                    <div class="card-footer">
                                        <a href="https://en.wikipedia.org/wiki/Battle_of_Waterloo" class="btn btn-dark btn-block">Wikipedia</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>